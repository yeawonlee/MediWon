<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tab_layout.IdentificationInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailAppBar"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/medicineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="제품명"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/medicineEngName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제품영문명"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="14dp"
                android:orientation="vertical">

                <!-- 마크 이미지(앞) -->
                <ImageView
                    android:id="@+id/medicineImage"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY" />

                <!-- 성상 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="성상"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="4dp"/>
                <TextView
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:padding="4dp"
                    android:layout_marginLeft="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CFCFCF"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />

                <!-- 표시 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="표시"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="4dp"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="앞"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:background="#CFCFCF"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="뒤"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:background="#CFCFCF"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/printFront"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:background="#F8F8F8"
                        android:layout_margin="1dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/printBack"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:background="#F8F8F8"
                        android:layout_margin="1dp"
                        android:layout_weight="1"/>
                    </TableRow>
                </TableLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CFCFCF"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />

                <!-- 색깔 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="색깔"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="4dp"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="앞"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:background="#CFCFCF"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="뒤"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:background="#CFCFCF"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/color_class1"
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:background="#F8F8F8"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/color_class2"
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:background="#F8F8F8"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                    </TableRow>
                </TableLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CFCFCF"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />

                <!-- 분할선 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="분할선"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="4dp"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="앞"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:background="#CFCFCF"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="뒤"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:background="#CFCFCF"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lineFront"
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:background="#F8F8F8"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/lineBack"
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:background="#F8F8F8"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                    </TableRow>
                </TableLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CFCFCF"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />

                <!-- 제형코드이름 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="제형"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="4dp"/>
                <TextView
                    android:id="@+id/formCodeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:padding="4dp"
                    android:layout_marginLeft="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CFCFCF"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />

                <!-- 의약품 모양 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="모양"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="4dp"/>
                <TextView
                    android:id="@+id/drug_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:padding="4dp"
                    android:layout_marginLeft="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CFCFCF"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />

                <!-- 크기 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="크기"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="4dp"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="장축"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:background="#CFCFCF"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="단축"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:background="#CFCFCF"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="두께"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:background="#CFCFCF"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lengthLong"
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:background="#F8F8F8"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/lengthShort"
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:background="#F8F8F8"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/thick"
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:background="#F8F8F8"
                            android:layout_margin="1dp"
                            android:layout_weight="1"/>
                    </TableRow>
                </TableLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CFCFCF"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>